<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live_top_bar_gradient">

    <ImageView
        android:id="@+id/fragment_top_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_live_room_margin"
        android:padding="10dp"
        android:src="@drawable/live_ic_back" />

    <TextView
        android:id="@+id/fragment_top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_live_room_margin"
        android:layout_toRightOf="@+id/fragment_top_bar_back"
        android:maxWidth="160dp"
        android:textColor="@color/live_white" />

    <LinearLayout
        android:id="@+id/fragment_top_bar_user_count_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_live_room_margin"
        android:layout_toRightOf="@+id/fragment_top_bar_title"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_top_bar_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/live_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/live_ic_arrow_down" />

    </LinearLayout>

    <ImageView
        android:id="@+id/fragment_top_bar_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_live_room_margin"
        android:src="@drawable/live_ic_nav_sharebold" />

</RelativeLayout>