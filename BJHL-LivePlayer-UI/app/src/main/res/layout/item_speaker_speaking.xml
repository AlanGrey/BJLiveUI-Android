<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/item_speaker_speaking_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:background="@color/accent" />

        <TextView
            android:id="@+id/item_speaker_speaking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_live_room_margin"
            android:layout_toRightOf="@+id/item_speaker_speaking_avatar"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="90dp"
            android:text="sdfsdfsdfsdfsdfdsfdsfdfsdfdsfdss" />

        <ImageView
            android:id="@+id/item_speaker_speaking_video_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/item_speaker_speaking_name"
            android:src="@drawable/ic_videoopen" />

        <TextView
            android:id="@+id/item_speaker_speaking_video_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/item_speaker_speaking_video_ic"
            android:text="@string/video_on"
            android:textColor="@color/live_text_color_light"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/item_speaker_speaking_close_speak"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/live_blue"
            android:text="@string/close_speaking"
            android:layout_marginRight="@dimen/activity_live_room_margin"/>

        <TextView
            android:id="@+id/item_speaker_speaking_open_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/live_blue"
            android:text="@string/open_video"
            android:layout_toLeftOf="@+id/item_speaker_speaking_close_speak"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
</LinearLayout>