<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialog_message_send_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_live_room_margin"
        android:src="@drawable/live_ic_send_img" />

    <EditText
        android:id="@+id/dialog_message_send_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:layout_toLeftOf="@+id/dialog_message_send_btn"
        android:layout_toRightOf="@+id/dialog_message_send_pic"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_edittext_send_msg"
        android:maxLines="4" />

    <Button
        android:id="@+id/dialog_message_send_btn"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_live_room_margin"
        android:text="@string/live_send_message" />

</RelativeLayout>